<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardUseCompatPadding="true"
        android:background="@color/white">

    <RelativeLayout
        android:id="@+id/layout1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="220dp">




    <LinearLayout
        android:id="@+id/itemInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:src="@drawable/abc_btn_check_to_on_mtrl_000"
            android:scaleType="centerCrop"/>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item type - "
                    android:fontFamily="sans-serif-light"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="parcel"
                    android:textAllCaps="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item quantity - "
                    android:fontFamily="sans-serif-light"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="12"
                    android:textAllCaps="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery type - "
                    android:fontFamily="sans-serif-light"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="parcel"
                    android:textAllCaps="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Customer name - "
                    android:fontFamily="sans-serif-light"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Arindam Dawn"
                    android:textAllCaps="true" />




        </LinearLayout>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            android:layout_below="@+id/itemInfo">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address - "
            android:fontFamily="sans-serif-light"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="7/23, Poddar Nagar, Kolkata - 700068, West Bengal"
            android:textAllCaps="true" />


        </LinearLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="PICKUP"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/primaryColor"
            android:textColor="@color/white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:background="@color/colorAccent">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                tools:text="ID : 4356 "
                android:textColor="@color/white"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Out for pickup"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"/>
        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp"
            android:textSize="14sp"
            tools:text="7/23, Poddar Nagar, Near South city mall, Kolkata - 700068 WB"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="6sp">

            <TextView
                android:id="@+id/customerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Arindam Dawn"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/deliveryType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text = "Local"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/image_background"
                android:contentDescription="@string/item_image" />

            <TextView
                android:id="@+id/itemType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Document"
                android:textSize="12sp"
                android:background="@color/indigo"
                android:textColor="@color/white"
                android:padding="4dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="6dp"/>

            <TextView
                android:id="@+id/requestType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="PICKUP"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:background="@color/darkGreen"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="6dp"/>

            <TextView
                android:id="@+id/shipmentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ID : 10"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:background="@color/textColorSecondary"
                android:textColor="@color/white"
                android:padding="4dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="6dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/transitStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                tools:text = "Waiting for pickup"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/itemQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                tools:text = "Qty : 12"
                android:textSize="12sp" />

        </RelativeLayout>
    </LinearLayout>



    </android.support.v7.widget.CardView>
